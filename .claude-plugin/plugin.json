{
  "name": "autology",
  "version": "0.1.0",
  "description": "Living Ontology for Claude Code - Prevents erosion of human understanding by capturing and reusing knowledge",
  "author": {
    "name": "Autology Contributors"
  },
  "homepage": "https://github.com/Curt-Park/autology",
  "repository": "https://github.com/Curt-Park/autology",
  "license": "MIT",
  "keywords": [
    "knowledge-management",
    "ontology",
    "adr",
    "documentation",
    "learning",
    "transparency"
  ],
  "hooks": "hooks/hooks.json",
  "skills": "skills",
  "agents": "agents",
  "mcpServers": {
    "autology": {
      "command": "${CLAUDE_PLUGIN_ROOT}/bin/autology",
      "env": {
        "AUTOLOGY_ROOT": ".autology"
      }
    }
  },
  "install": {
    "postInstall": "hooks/install.sh"
  },
  "engines": {
    "claude-code": ">=1.0.0"
  }
}
