{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh\"",
            "statusMessage": "Loading Autology knowledge base..."
          }
        ],
        "description": "Inject ontology summary and autonomous capture instructions"
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/session-end.sh\"",
            "statusMessage": "Autology session end..."
          }
        ],
        "description": "Show knowledge capture tip on session end"
      }
    ]
  }
}
