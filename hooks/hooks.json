{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/launcher.sh\" hook session-start"
          }
        ],
        "description": "Inject ontology summary and autonomous capture instructions"
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/launcher.sh\" hook session-end"
          }
        ],
        "description": "Show knowledge capture tip on session end"
      }
    ]
  }
}
